{
    "builders": [
        {
            "communicator": "ssh",
            "type": "vagrant",
            "add_force": true,
            "add_insecure": true,
            "provider": "virtualbox",
            "source_path": "ubuntu/xenial64",
            "output_dir": "artifact"
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "inline": ["sudo apt update", "sudo apt install -y apache2", "sudo chown -R vagrant /var/www/html"]
        },
        {
            "type": "file",
            "source": "./html/sample.html",
            "destination": "/var/www/html/"
        }
    ]
}